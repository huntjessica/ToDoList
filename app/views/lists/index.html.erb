<h1>Lists</h1>

<table class="gridtable">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"> Actions </th>
    
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= link_to 'Show', list_todo_items_path(list), class: "fa fa-eye" %></td>

    
        <td><%= link_to 'Edit', edit_list_path(list), class: "fa fa-pencil" %></td>


        <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 
<div class="new_list">
<%= link_to 'New List', new_list_path %>
</div>



    